<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="#fff"
    android:id="@+id/main"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <ImageView

        android:background="#49FE87"
        android:src="@drawable/bacsiu"
        android:id="@+id/image_product_order"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name_product_order"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="Bạc sỉu"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/price_product_order"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="35.000đ"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <ImageButton
            android:id="@+id/btnAddOrder"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:background="@null"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>