<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:layout_height="match_parent"
    tools:context=".activity.StoreInformationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        app:title="Thông tin cửa hàng" />
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/image_store"
                    android:scaleType="centerCrop"
                    android:id="@+id/image_store"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="75dp">
                    <TextView
                        android:text="THE COFFEE HOUSE"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/add_store"
                        android:text="771 Phan Văn Trị"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/time_store"
                        android:text="Giờ mở cửa: 7:00 - 21:30"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    />
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                    <TextView
                        android:id="@+id/address_store"
                        android:padding="10dp"
                        android:text="771 Phan Văn Trị, Quận Gò Vấp, Hồ Chí Minh, Việt Nam"
                        android:textSize="20sp"
                        android:drawablePadding="10dp"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"/>
                    <TextView
                        android:id="@+id/favorite_store"
                        android:padding="10dp"
                        android:text="Cửa hàng yêu thích"
                        android:textSize="20sp"
                        android:drawablePadding="10dp"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:drawableLeft="@drawable/ic_no_favorite"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"/>
                    <TextView
                        android:id="@+id/share_store"
                        android:padding="10dp"
                        android:text="Chia sẽ về địa chỉ"
                        android:textSize="20sp"
                        android:drawablePadding="10dp"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:drawableLeft="@drawable/ic_baseline_share_24"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"/>
                    <TextView
                        android:id="@+id/phone_store"
                        android:padding="10dp"
                        android:text="Liên hệ: 18006936"
                        android:textSize="20sp"
                        android:drawablePadding="10dp"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:drawableLeft="@drawable/ic_phone"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"/>
                </LinearLayout>
            <Button
                android:id="@+id/btnOrder"
                android:layout_margin="10dp"
                android:background="@drawable/custom_radius_10dp"
                android:backgroundTint="#FF0000"
                android:layout_width="match_parent"
                android:text="ĐẶT SẢN PHẨM\nTự đến lấy tại của hàng"
                android:textColor="#FFF"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>