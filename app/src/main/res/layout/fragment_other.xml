<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#FAF0F0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".fragment.OtherFragment">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/util"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:text="Tiện ích"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/historyOrder"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    app:cardMaxElevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#fff"
                    android:background="#fff"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:padding="25dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="DuplicateIds">
                        <ImageView
                            android:src="@drawable/ic_history_order"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:textColor="#000000"
                            android:text="Lịch sử mua hàng"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/clause"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    app:cardMaxElevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#fff"
                    android:background="#fff"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:padding="25dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_clause"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:textColor="#000000"
                            android:text="Điều khoản"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/support"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:text="Hỗ trợ"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/reviewOther"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Đánh giá đơn hàng"
                    android:background="@drawable/custom_radius_10dp"
                    android:textColor="#000000"
                    android:gravity="start|center_vertical"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawableLeft="@drawable/ic_baseline_star_border_24"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/contractOther"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Liên hệ và góp ý"
                    android:background="@drawable/custom_radius_10dp"
                    android:textColor="#000000"
                    android:gravity="start|center_vertical"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawableLeft="@drawable/ic_baseline_comment_24"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/account"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:text="Tài khoản"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/informationUserOther"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Thông tin cá nhân"
                    android:background="@drawable/custom_radius_10dp"
                    android:textColor="#000000"
                    android:gravity="start|center_vertical"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/addressSaveOther"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Địa chỉ đã lưu"
                    android:background="@drawable/custom_radius_10dp"
                    android:textColor="#000000"
                    android:gravity="start|center_vertical"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/settingOther"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Cài đặt"
                    android:background="@drawable/custom_radius_10dp"
                    android:textColor="#000000"
                    android:gravity="start|center_vertical"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawableLeft="@drawable/ic_setting"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/logoutOther"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Đăng xuất"
                    android:background="@drawable/custom_radius_10dp"
                    android:textColor="#000000"
                    android:gravity="start|center_vertical"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawableLeft="@drawable/ic_baseline_logout_24"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
