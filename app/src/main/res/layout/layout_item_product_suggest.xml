<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingBottom="20dp"
    android:id="@+id/main"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_product_suggest"
            android:background="@drawable/custom_radius_10dp"
            android:backgroundTint="#49FE87"
            android:src="@drawable/bacsiu"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/name_product_suggest"
        android:layout_marginTop="3dp"
        android:layout_gravity="start"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="Bạc sỉu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/price_product_suggest"
        android:layout_marginTop="3dp"
        android:layout_gravity="start"
        android:textColor="#000000"
        android:textSize="10sp"
        android:text="35.000đ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnSelectProduct"
        android:text="Chọn"
        android:textSize="10dp"
        android:backgroundTint="#49FE87"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_radius_10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>