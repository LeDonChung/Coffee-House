<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".fragment.OrderFragment">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9F292"
            android:drawableLeft="@drawable/ic_menu_order"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="Danh má»¥c"
            android:textColor="#000000"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/ln1"
            android:weightSum="2"
            android:layout_margin="10dp"
            android:layout_below="@+id/tv1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                        <ImageButton
                            android:id="@+id/btnCoffee"
                            android:background="#fff"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:src="@drawable/image_coffee_menu"
                            android:layout_height="match_parent"/>
                        <ImageButton
                            android:id="@+id/btnMilkTea"
                            android:src="@drawable/image_trasua_menu"
                            android:background="#fff"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageButton
                            android:id="@+id/btnCake"
                            android:src="@drawable/image_banhngot_menu"
                            android:background="#fff"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                        <ImageButton
                            android:id="@+id/btnFruitTea"
                            android:src="@drawable/image_tratraicay_menu"
                            android:background="#fff"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageButton
                            android:id="@+id/btnSnack"
                            android:src="@drawable/image_snack_menu"
                            android:background="#fff"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageButton
                            android:id="@+id/btnDrinkOther"
                            android:src="@drawable/image_drink_other_menu"
                            android:background="#fff"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                </LinearLayout>
        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_margin="10dp"
            android:id="@+id/viewPager2"
            android:layout_below="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
</RelativeLayout>